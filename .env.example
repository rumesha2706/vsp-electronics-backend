# ====================================
# IMPORTANT: Copy to .env and update values
# NEVER commit .env to git!
# ====================================

# ====================================
# Database Configuration
# ====================================
DATABASE_URL="postgresql://user:password@localhost:5432/vsp_electronics"

# ====================================
# Security & reCAPTCHA
# Get from: https://www.google.com/recaptcha/admin
# ====================================
RECAPTCHA_SITE_KEY=your_recaptcha_site_key_here
RECAPTCHA_SECRET_KEY=your_recaptcha_secret_key_here

# ====================================
# Gmail Configuration (Backend Only)
# Generate app password: myaccount.google.com/apppasswords
# Steps to get Gmail App Password:
# 1. Enable 2-Factor Authentication on your Google account
# 2. Go to myaccount.google.com/apppasswords
# 3. Select "Mail" and "Windows Computer"
# 4. Copy the 16-character password
# ====================================
SENDER_EMAIL=your-email@gmail.com
GMAIL_APP_PASSWORD=xxxx xxxx xxxx xxxx
SENDER_NAME=VSP Electronics
ADMIN_EMAIL=admin@vspelectronics.com
SUPPORT_EMAIL=support@vspelectronics.com

# ====================================
# Google OAuth (Backend Only)
# Get from: https://console.developers.google.com/
# ====================================
GOOGLE_OAUTH_CLIENT_ID=xxx.apps.googleusercontent.com
GOOGLE_OAUTH_CLIENT_SECRET=your_client_secret_here

# ====================================
# Application Configuration
# ====================================
NODE_ENV=development
FRONTEND_URL=http://localhost:4200
BACKEND_URL=http://localhost:3000
API_PORT=3000

# ====================================
# EMAIL SMTP CONFIGURATION
# ====================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false

# ====================================
# WhatsApp Configuration
# Choose ONE provider: 'twilio' or 'meta'
# ====================================

# WhatsApp Provider Type
WHATSAPP_PROVIDER=twilio

# --- Option 1: Twilio WhatsApp API ---
# Get from: https://www.twilio.com/console
TWILIO_ACCOUNT_SID=AC_your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
WHATSAPP_BUSINESS_NUMBER=+1234567890

# --- Option 2: Meta WhatsApp Business API ---
# Get from: https://developers.facebook.com/docs/whatsapp/cloud-api
WHATSAPP_BUSINESS_PHONE_ID=your_phone_id
WHATSAPP_BUSINESS_API_TOKEN=your_api_token
WHATSAPP_WEBHOOK_TOKEN=your_webhook_verification_token
WHATSAPP_WEBHOOK_SECRET=your_webhook_secret

# ====================================
# JWT Configuration
# ====================================
JWT_SECRET=your-super-secret-key-change-in-production
JWT_EXPIRY=7d

# ====================================
# Order Notification Settings
# ====================================
# Default notification channels: 'email', 'whatsapp', or 'both'
DEFAULT_ORDER_NOTIFICATION=both
AUTO_SEND_ORDER_CONFIRMATION=true
AUTO_SEND_STATUS_UPDATES=true

# ====================================
# AWS S3 Configuration (Optional)
# ====================================
AWS_REGION=ap-south-1
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_S3_BUCKET=vsp-electronics-bucket

# ====================================
# Stripe Configuration (Optional)
# ====================================
STRIPE_SECRET_KEY=sk_test_your_stripe_key
STRIPE_PUBLIC_KEY=pk_test_your_stripe_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# ====================================
# Logging & Debug
# ====================================
LOG_LEVEL=debug
DEBUG=false
